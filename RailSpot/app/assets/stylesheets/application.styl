// Stylus Mixins

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments
  
box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments
clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

transform(args...)
  -moz-transform args
  -webkit-transform args
  -o-transform args
  -khtml-transform args 
  
  
  

